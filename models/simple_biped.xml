<!-- Simple Bipedal Robot MJCF -->
<mujoco model="simple_biped">
    <compiler inertiafromgeom="true" angle="degree"/>
    <option timestep="0.005" gravity="0 0 -9.81" iterations="50"/>

    <worldbody>
        <!-- Floor -->
        <geom name="floor" type="plane" size="10 10 0.1" rgba="0.8 0.9 0.8 1"/>
        
        <!-- Torso -->
        <body name="torso" pos="0 0 1.25">
            <joint name="root" type="free"/>
            <geom name="torso_geom" type="sphere" size="0.25" rgba="0.8 0.2 0.2 1"/>
            
            <!-- Left Leg -->
            <body name="left_thigh" pos="0 0.2 0">
                <joint name="left_hip" type="hinge" axis="0 1 0" range="-60 60"/>
                <geom name="left_thigh_geom" type="capsule" size="0.05" fromto="0 0 0 0 0 -0.5" rgba="0.2 0.8 0.2 1"/>
                <body name="left_leg" pos="0 0 -0.5">
                    <joint name="left_knee" type="hinge" axis="0 1 0" range="0 90"/>
                    <geom name="left_leg_geom" type="capsule" size="0.04" fromto="0 0 0 0 0 -0.5" rgba="0.2 0.8 0.2 1"/>
                </body>
             body>

            <!-- Right Leg -->
            <body name="right_thigh" pos="0 -0.2 0">
                <joint name="right_hip" type="hinge" axis="0 1 0" range="-60 60"/>
                <geom name="right_thigh_geom" type="capsule" size="0.05" fromto="0 0 0 0 0 -0.5" rgba="0.2 0.2 0.8 1"/>
                <body name="right_leg" pos="0 0 -0.5">
                    <joint name="right_knee" type="hinge" axis="0 1 0" range="0 90"/>
                    <geom name="right_leg_geom" type="capsule" size="0.04" fromto="0 0 0 0 0 -0.5" rgba="0.2 0.2 0.8 1"/>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor name="left_hip_motor" joint="left_hip" gear="100"/>
        <motor name="left_knee_motor" joint="left_knee" gear="50"/>
        <motor name="right_hip_motor" joint="right_hip" gear="100"/>
        <motor name="right_knee_motor" joint="right_knee" gear="50"/>
    </actuator>
</mujoco>
